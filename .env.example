# LLM Configuration
LLM_PROVIDER=ollama
LLM_MODEL=deepseek
OLLAMA_BASE_URL=http://localhost:11434

# AnythingLLM Configuration
ANYTHING_LLM_API_KEY=your_api_key_here
ANYTHING_LLM_BASE_URL=http://localhost:3001

# Output Configuration
OUTPUT_FORMAT=pdf
RESUME_TEMPLATE=modern

# ATS Optimization
TARGET_ATS_SCORE=85
KEYWORD_THRESHOLD=0.8

# Development Settings
DEBUG=false
LOG_LEVEL=info

# Optional: Proxy Configuration
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# Optional: Custom Template Paths
# RESUME_TEMPLATE_DIR=/path/to/custom/templates
# COVER_LETTER_TEMPLATE_DIR=/path/to/custom/templates

# Optional: Cache Settings
# CACHE_DIR=/path/to/cache
# CACHE_TTL=3600

# Optional: Rate Limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=3600
